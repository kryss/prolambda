
<div id="block-signup" class="block">
  <h2>Forgot your password?</h2>
  <div class="content">
    <% flash.each do |type, message| -%>
    <div class="flash">
      <div class="message <%= type %>"><p><%= message %></p></div>
    </div>
    <% end -%>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form login" }) do |f| %>
    <%= devise_error_messages! %>

      <div class="group wat-cf">
        <div class="left">
          <label class="label"><%= f.label :email %></label>
        </div>
        <div class="right">
          <%= f.text_field :email, :class => "text_field" %>
        </div>
      </div>
      <div class="group navform wat-cf">
        <div class="right">
          <button type="submit" class="button">
            <img alt="Tick.png" src="/images/web-app-theme/icons/tick.png"> Send me reset password instructions
          </button>
        </div>
      </div>
    <% end %>

<%= render :partial => "devise/shared/links" %>
</div>