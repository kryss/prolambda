<div id="block-signup" class="block">
  <h2>Sign up</h2>
  <div class="content">
    <% flash.each do |type, message| -%>
    <div class="flash">
      <div class="message <%= type %>"><p><%= message %></p></div>
    </div>
    <% end -%>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form login"} ) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="group wat-cf">
      <div class="left">
        <label class="label"><%= f.label :email %></label>
      </div>
      <div class="right">
        <%= f.text_field :email, :class => "text_field" %>
        <span class="description">Ex: toto@toto.com</span>
      </div>
    </div>
    <div class="group wat-cf">
      <div class="left">
        <label class="label"><%= f.label :password %></label>
      </div>
      <div class="right">
        <%= f.password_field :password, :class => "text_field" %>
        <span class="description">Ex: password</span>
      </div>
    </div>
    <div class="group wat-cf">
      <div class="left">
        <label class="label"><%= f.label :password_confirmation %></label>
      </div>
      <div class="right">
        <%= f.password_field :password_confirmation, :class => "text_field" %>
        <span class="description">Password again</span>
      </div>
    </div>
    <div class="group navform wat-cf">
      <div class="right">
        <button type="submit" class="button">
          <img alt="Sign up" src="/images/web-app-theme/icons/tick.png"> Sign up
        </button>
      </div>
    </div>

    <% end %>
    
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>