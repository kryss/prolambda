<div id="block-login" class="block">
  <h2>Sign in</h2>
  <div class="content login">
    <% flash.each do |type, message| -%>
    <div class="flash">
      <div class="message <%= type %>"><p><%= message %></p></div>
    </div>
    <% end -%>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form login" }) do |f| %>
    <div class="group wat-cf">
      <div class="left">
        <label class="label right"><%= f.label :email %></label>
      </div>
      <div class="right">
        <%= f.text_field :email, :class => "text_field" %>
      </div>
    </div>
    <div class="group wat-cf">
      <div class="left">
        <label class="label right"><%= f.label :password %></label>
      </div>
      <div class="right">
        <%= f.password_field :password, :class => "text_field" %>
      </div>
    </div>

<% if devise_mapping.rememberable? -%>
<div class="group wat-cf">
  <div class="left">
    <label class="label right"><%= f.label :remember_me, :class => "checkbox" %></label>
  </div>
  <div class="right">
    <%= f.check_box :remember_me, :class => "checkbox" %>
  </div>
</div>
<% end -%>

<div class="group navform wat-cf">
  <div class="right">
    <button type="submit" class="button">
      <img alt="Save" src="/images/web-app-theme/icons/key.png"> Sign in
    </button>
  </div>
</div>


<% end %>

<%= render :partial => "devise/shared/links" %>
</div>
</div>
